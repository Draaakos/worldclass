body 
    padding 0
    border 0
    margin 0

.form__register 
    color #46A2FD
    width 50%
    border 1px solid #ccc
    padding 20px
    margin 5em auto
    background-color white

    &__title
        text-align center

    &__label
        font-size 12px
        display block
        width 100%

    &__input
        margin-bottom 20px
        width 100%
        padding 10px
        box-sizing border-box
        border 1px solid #ccc 

    &__btn
        width 100%
        padding 10px
        background #46A2FD
        color #fff
        border none

        :hover 
            background #64aff9
            cursor pointer












































