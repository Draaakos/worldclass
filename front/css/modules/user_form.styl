.form-register
    color #699361
    border 1px solid #ccc
    padding 20px
    background-color white
    max-width 400px
    width 80vw

    &__title
        text-align center

    &__label
        font-size 12px
        display block
        width 100%

    &__input
        margin-bottom 20px
        width 100%
        padding 10px
        box-sizing border-box
        border 1px solid #ccc

    &__btn
        width 100%
        padding 10px
        background #699361
        color #fff
        border none

        &:hover
            background #43673c
            cursor pointer

    .selector
        border 1px solid #ccc
        margin-bottom 20px;
        padding 10px
        background-color #ffffff

@media screen and (min-width: 1024px)
    .form-register
        width 400px
