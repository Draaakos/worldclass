body 
    padding 0
    border 0
    margin 0
    background-image url(../images/bg1.jpg)
    background-size cover
    background-attachment fixed
    background-position center center

.login
    color #46A2FD
    padding 20px
    margin 5em auto
    width 23%

    &__form
        background  white
        margin auto
        padding 80px 20px
        border-radius 20px
        text-align center
        margin-bottom 20px
        position relative

    &__title
        color #46A2FD


    &__input
        margin-bottom 20px
        width 100%
        padding 10px
        box-sizing border-box
        border 1px solid #ccc 


.btn
    width 100%
    padding 10px
    background #46A2FD
    color #fff
    border none
    :hover 
        background #64aff9
        cursor pointer







