.footer
    background-color #252525
    color white
    width 100vw
    bottom 0
    left 0
    display flex
    justify-content center
    align-items center
    border-right solid #efefef

    &__title
        border-right solid #efefef
        padding 20px
        font-family "Roboto"
        font-weight bold
        font-size 0.5em

    &__element
        display flex
        font-size 0.5em
        justify-content flex-end
        width 100%
        padding 1.5em
        padding-right 20px
    
    &__email
        padding 1.5em
        font-size 0.8em
        font-family "Roboto"
        font-weight bold

    &__element-icon
        padding 1em
        transform translateY(1px) scale(1.5)

        a 
            color white

@media screen and (min-width: 1024px)
    .footer
        background-color #252525

        &__title
            font-size 1em

        &__element
            font-size 1em
        
        &__email
            padding 1em
            font-size 1em
        
        &__element-icon
            padding 1em
            transform translateY(1px) scale(1.5)