.car-table
    min-height 80vh
    *
        box-sizing border-box

    &__row
        display grid
        grid-template-columns repeat(7, 1fr)

        & > div
            border 1px solid #efefef
            padding .5em
            display flex
            align-items center

    &__options
        justify-content space-between
        align-items center

        &__item
            padding 1em
            border-radius .7em
            color color-gray-text

            &:hover
                color black
                cursor pointer


.selector,
.editable-input
    border none
    width 100%

.selector
    background-color white


.hidden-upload
    display none


.download-button,
.upload-button
    &:hover
        cursor pointer


.for-expired
    border 1px solid rgba(245, 13, 13, 0.6)



@media screen and (min-width: viewport)

    .car-table
        &__options
            max-width 270px
