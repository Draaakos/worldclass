.modal
    position fixed
    background-color rgba(33, 31, 31, 0.734)
    width 100%
    height 100%
    left 0
    top 0
    z-index 1

    &__content
        position absolute
        width 80%


@media screen and (min-width: 1024px)
    .modal
        &__content
            left 140px
            padding-top 120px







