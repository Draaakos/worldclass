.mining-table
    min-height 80vh
    *
        box-sizing border-box

    &__row
        display grid
        grid-template-columns repeat(3, 1fr)

        & > div
            border 1px solid #efefef
            padding .5em
            display flex
            align-items center

    &__options
        display flex
        justify-content space-between
        align-items center

        .button
            width 100%



.selector,
.editable-input
    border none
    width 100%

.selector
    background-color white