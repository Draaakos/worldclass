
.message
    background-color #1f1e1d
    transition all .2s ease
    width 450px
    color white
    padding 1.5em

    &__icon
        padding-right .7em

    &__box
        display flex
        align-items center
        justify-content center

    &__text
        font-size 1.4em

    &__button-wrapper
        display flex
        justify-content center
        padding-top 1em

        button
            border 1px solid #167780
            color #167780
            padding .7em 5em
            background-color transparent
            transition all .2s ease

            &:hover
                cursor pointer
                background-color #167780
                color white
                transition all .2s ease

