.page
    display grid
    grid-template-columns 1fr
    grid-template-rows 1.5fr .5fr
    height 100vh


.banner__wrapper
    background-image url('../images/bg2.jpeg')
    background-size cover
    background-position center
    width 100%
    height 100%


.banner__wrapper-shadow
    display flex
    align-items center
    justify-content center
    background-color rgba(0, 0, 0, .8)
    width 100%
    height 100%


 .banner
    max-width 500px
    max-height 200px
    padding 1em
    text-align center
    display flex
    align-items center
    justify-content center
    
    &__title
        font-size 1.8em
        color white
        margin-bottom .5em
        text-transform uppercase

    
    &__title-paragraph
        color white
        font-style italic
        opacity .9


.main-info
    width 100%
    background-color red
    